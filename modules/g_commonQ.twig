{
    "name": {
        "ar": "الاسئله الشائعه - جلامور",
        "en": "glamour - common questions"
    },
    "icon": "fal fa-user",
    "display": true,
    "settings": {
        "section_title": {
            "type": "text",
            "label": {
                "ar": "عنوان السكشن ؟",
                "en": "عنوان السكشن ؟"
            }
        },
        "questions": {
            "type": "list",
            "label": {
                "ar": "الاسئله",
                "en": "questions"
            },
            "settings": {
                "ques": {
                    "type": "text",
                    "label": {
                        "ar": " السؤال",
                        "en": "the question "
                    }
                },
                "ans": {
                    "type": "text",
                    "label": {
                        "ar": " الجواب",
                        "en": " the answer"
                    }
                }
            }
        }
    }
}

{% endschema %}