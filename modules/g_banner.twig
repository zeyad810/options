{# start section banner component #}
<section id="g_banner">
	<div
		class=" g_banner_content">
		{# cards #}
		{% for card in settings.collection %}
			<div id="card-{{ loop.index }}" style="background: url({{card.collection_image}}) center no-repeat; background-size: cover; align-items:{{card.collection_position_x}}; justify-content:{{card.collection_position_y}};">
				<p style="color: {{ card.collection_color }};">
					{{ card.collection_name }}
				</p>
				<div class="content-btn mt-2">
					<a href="{{ card.collection_url }}" id="a-{{loop.index}}" class="show-stars">
						{{ card.collection_text_btn }}
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
</section>


{# styling #}
<style>
	@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@200..1000 &display=swap');
	#g_banner
	{
		margin-bottom: 120px;
	}
	.g_banner_content
	{

		display: grid;
		grid-template-columns: repeat(2 , 1fr);
		grid-template-rows: repeat(2 , 1fr);
		gap: 10px;
		grid-template-areas: "one two" "one three";
	}
	.g_banner_content #card-1
	{
		grid-area: one;
		aspect-ratio: 1.99 / 1.7;
		display: flex;
		align-items: flex-end;
		border-radius: 8px 0 0 8px;
	}
	.g_banner_content #card-1 p
	{
		font-weight: 700;
		font-size: 50px;
		text-align: center;
		font-family: "Cairo", sans-serif;
		line-height: 60px;
		padding: 20px;
	}
	.g_banner_content #card-2
	{
		grid-area: two;
		aspect-ratio: 867 / 360;
		padding:  20px;
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		border-radius: 8px 0 0 8px;
	}
	.g_banner_content #card-2 p
	{
		font-weight: 700;
		font-size: 30px;
		font-family: "Cairo", sans-serif;
	}
	.g_banner_content #card-3
	{
		grid-area: three;
		aspect-ratio: 867 / 361;
		padding:  20px;
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		border-radius: 8px 0 0 8px;
	}
	.g_banner_content #card-3 p
	{
		font-weight: 700;
		font-size: 30px;
		font-family: "Cairo", sans-serif;
	}
	.g_banner_content .content-btn #a-2,
	.g_banner_content .content-btn #a-3
	{
		background-color: var(--white-color);
		border-radius: 8px;
		padding: 13px 45px;
		margin-left: 10px;
		color: var(--primary-color);
		display: inline-block;
		font-size: 16px;
	}
	.g_banner_content .content-btn #a-2:hover,
	.g_banner_content .content-btn #a-3:hover
	{
		background-color: #fbfbfb33;
		color: var(--white-color);
		cursor: pointer;
	}
	.content-btn
	{
		position: relative;
		width: fit-content;
	}
	.content-btn:hover .show-stars:before,
	.content-btn:hover .show-stars:after
	{
		opacity: 1 !important;
	}

	/* media */
	@media(max-width: 768px)
	{
		.g_banner_content
		{
			display: flex;
			align-items: center;
			flex-wrap: wrap;
		}
		.g_banner_content #card-1,
		.g_banner_content #card-2,
		.g_banner_content #card-3
		{
			width: 100%;
			height: 100%;
		}
		.g_banner_content #card-1 p
		{
			font-size: 40px;
			font-weight: bolder;
			line-height: 1.2;
		}
	}
	@media(max-width: 425px)
	{
		.g_banner_content
		{
			display: flex;
			align-items: center;
			flex-direction: column;
		}
		.g_banner_content #card-1,
		.g_banner_content #card-2,
		.g_banner_content #card-3
		{
			width: 100%;
			height: 100%;
		}
		.g_banner_content #card-1 p
		{
			font-size: 30px;
			font-weight: bolder;
			line-height: 1.5;
		}
	}
	@media(min-width: 1440px)
	{
		.g_banner_content #card-1 p
		{
			margin: 0 auto 10%;
			padding: 0;
		}
		.g_banner_content #card-2 p
		{
			font-size: 50px;
		}
		.g_banner_content .content-btn #a-2
		{
			padding: 18px 60px;
			font-size: 30px;
		}
		.g_banner_content #card-3 p
		{
			font-size: 50px;
			padding-left: 24px
		}
		.g_banner_content .content-btn #a-3
		{
			padding: 18px 60px;
			font-size: 30px;
		}
	}
</style>

