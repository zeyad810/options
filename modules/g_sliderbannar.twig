<section id="slider_bannar_g" section-id="{{ sectionId }}" class="slider-bannars pt-96">
	<div class='slider-bannars_items'>
		<div class="content_btns absolute" style="left: 8%; display: none;">
			<div class="swiper-button-prev transition" style="background-color:#fff; border:1px solid #C0C0C0; border-radius:4px; padding: 20.49px 21px;"></div>
			<div class="swiper-button-next transition" style="background-color:#fff; border:1px solid #C0C0C0; border-radius:4px; padding: 20.49px 21px;"></div>
		</div>
		<swiper-container class="mySwiper" pagination="true" >

			{% for item in settings.bannars %}
					<swiper-slide class="swiper-slide slider-bannars-moving">
					<div class="swip_div" style="background: url('{{ item.background_image }}') ;background-size: 100% 100% !important; width: 100vw !important;">

					<div class="photo_one">
						<img loading="lazy" width='100%' src='{{item.F_image}}' alt="img">
					</div>

					<div class="content">
						<h2>{{ item.bannar_title}}
							<span class="percent">{{item.bannar_percentage}}</h2>
							<p style="color:{{item.bannar_color}}">{{item.bannar_desc}}</p>
							<a style="margin:0 auto" href="{{item.bannar_url}}">
								<button style="color:{{item.btn_text}}">
									{{locals.Discover_more}}</button>
							</a>
						</div>

						<div class="photo">
							<img loading="lazy" src='{{item.S_image}}' width='80%' alt="img">
						</div>
					</div>
					</swiper-slide>
				{% endfor %}
			</swiper-container>
			<div class="navigate "></div>
		</div>
	</section>


	<style>

		swiper-container {
			width: 100%;
			height: 100%;
		}

		.swip_div {
			text-align: center;
			font-size: 18px;
			background: #fff;
			justify-content: center;
			align-items: center;
			display: flex !important;
			flex-direction: row !important;
			padding: 50px 20px 0;
		}

		swiper-slide img {
			display: block;
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

      	.content h2{
			cursor: default !important;
			}
		@media(max-width: 767px) {
			.photo_one {
				display: none; /* إخفاء الصورة الأولى في الشاشات الصغيرة */
			}

			.swip_div {
				flex-direction: column !important; /* تغيير الاتجاه ليصبح عمودي */
				align-items: center !important;
			}
			.content {
				margin-bottom: 20px; /* إضافة مسافة أسفل النص */
				justify-content: center !important;
				align-items: center !important;
				
			}
		
		}

		.content .percent {
			font-size: 48px;
			color: #9A3B3B;
			font-weight: bold
		}
	</style>


