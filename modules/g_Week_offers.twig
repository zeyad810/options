<section class="offer-deadline" section-id="{{ sectionId }}">

<div class="slider-product">
      <!-- Wrapper for all products -->
  <swiper-container  pagination="true"  class="productgroup">

    {% for product in settings.products.products %}
   
    <!-- Each product slide -->
    <swiper-slide class="product-end">
      <!-- Product data section (left half) -->
      <div class="productdata show-stars">
       <div class="pro_cont ">
         <h2>{{settings.title}}</h2>
        <a class="title" href="/categories/{{ product.categories[0].id }}/{{ product.categories[0].slug }}"></a>       
        <p>{{ product.name }}</p>
        <!-- Countdown timer section -->
        <div class="counttimer">
          <div class="countDown">
            <ul class="offer-ul">
              <li class="countdown__seconds js-seconds">
                <span style="font-size: 25px; font-weight: 700"></span>
                {{ locals.sec }}
              </li>       
              <li class="countdown__minutes js-minutes">
                <span style="font-size: 25px; font-weight: 700"></span>
                {{ locals.min }}
              </li>
              <li class="countdown__hours js-hours">
                <span style="font-size: 25px; font-weight: 700"></span>
                {{ locals.hour }}
              </li>
              <li class="countdown__days js-days">
                <span style="font-size: 25px; font-weight: 700"></span>
                {{ locals.day }}
              </li>
            </ul>
          </div>
        </div>
                <a href='{{product.html_url}}'>
                     <button class="shopbtn show-stars" style="--color:{{settings.text_color}}; --background-color: {{settings.bg_color}}">{{settings.shop_button}}</button>
                </a>
       </div>
      </div>
     

      <!-- Product image section (right half) -->
      <div class="productimage">
        <img loading="lazy" src="{{ product.images[0]['image']['medium'] }}" alt="{{ product.images.alt_text }}">
      </div>

    </swiper-slide> <!-- End of product slide -->

    {% endfor %}
    
  </swiper-container> <!-- End of swiper-wrapper -->

  <!-- Swiper navigation -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>


  
<div>

